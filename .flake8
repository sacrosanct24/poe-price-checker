[flake8]
# Line length matches what we use in CI
max-line-length = 127
max-complexity = 15

# Exclude virtual environments and build artifacts
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    .venv,
    .eggs,

# Ignore certain warnings (style issues we'll address gradually):
# W: all warnings (whitespace, line breaks) - style, not errors
# E1xx: indentation - style
# E2xx: whitespace around operators - style
# E3xx: blank lines - style
# E501: line too long - already enforced by max-line-length
# E7xx: statement issues (lambdas, multiple statements) - style
# C901: function complexity - tracked separately
# F401: unused imports - often intentional
# F541: f-string without placeholders - often intentional
# F811: redefinition - often intentional in tests
# F841: assigned but unused - often intentional
ignore =
    W,
    E1,
    E2,
    E3,
    E402,
    E501,
    E704,
    E731,
    E741,
    C901,
    F401,
    F541,
    F811,
    F841,

# Per-file ignores for specific patterns
per-file-ignores =
    # Tests often have unused imports for fixtures
    tests/*:F401,F811
    # __init__.py files re-export symbols
    */__init__.py:F401

# Only check our source directories
# (CI will specify these explicitly)
